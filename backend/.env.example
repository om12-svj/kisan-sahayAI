# ===========================================
# KISAN SAHAY - Backend Environment Variables
# ===========================================

# Server
NODE_ENV=development
PORT=3001

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/kisan_sahay?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-access-key-min-64-chars-long-for-security"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-64-chars-long-for-security"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="7d"

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# SMS Provider (MSG91)
MSG91_AUTH_KEY="your-msg91-auth-key"
MSG91_SENDER_ID="KISANS"
MSG91_TEMPLATE_ID="your-template-id"
MSG91_DLT_TE_ID="your-dlt-template-id"

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_FROM="whatsapp:+14155238886"

# CORS
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email (SMTP)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@kisansahay.org"

# Encryption (for sensitive data at rest)
ENCRYPTION_SECRET="your-encryption-secret-min-32-chars"

# AI Service (for enhanced sentiment analysis)
AI_API_KEY="your-ai-api-key"
AI_API_URL="https://api.openai.com/v1"

# Logging
LOG_LEVEL=debug
